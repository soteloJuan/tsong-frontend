{
    "env": {
        "browser": true,
        "es2021": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi":[2, "always"],
        "no-console": 2,
        "implicit-arrow-linebreak": "off",
        "indent": "off",
        "operator-linebreak": "off"
    }
}
